<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-2.5.xsd">
    <context:annotation-config/>
    <!--    using name of property in constructor-->
    <bean id="actor" class="com.stackroute.domain.Actor" autowire="byName">
        <constructor-arg name="name" value="Ayush"/>
        <constructor-arg name="gender" value="Male"/>
        <constructor-arg name="age" value="23"/>
    </bean>
    <bean id="movie" class="com.stackroute.domain.Movie" autowire="constructor" />
<!--    <bean id="movie" class="com.stackroute.domain.Movie" autowire="byType"/>-->
    <bean id="beanLifecycleDemoBean" class="com.stackroute.demo.BeanLifecycleDemoBean" init-method="customInit"  destroy-method="customDestroy"/>
    <bean id="beanPostProcessorDemoBean" class="com.stackroute.demo.BeanPostProcessorDemoBean" />
</beans>